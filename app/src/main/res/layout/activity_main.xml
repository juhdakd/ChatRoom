<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bd">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="ChatNote"
        android:textSize="50dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingTop="50dp"/>

    <LinearLayout
        android:id="@+id/usernameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="110dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_username_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/custom_edittext_background"
            android:gravity="center_vertical|center_horizontal"
            android:text="XM"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ipAddressLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/usernameLayout"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_ip_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPAd:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_ip"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/custom_edittext_background"
            android:gravity="center_vertical|center_horizontal"
            android:text="10.128.197.212"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/portLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ipAddressLayout"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/tv_port_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Port:"
            android:textColor="#000000"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_port"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/custom_edittext_background"
            android:gravity="center_vertical|center_horizontal"
            android:text="6666"
            android:textColor="#000000" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/portLayout"
        android:layout_marginTop="151dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <Button
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/custom_button_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Login"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />

        <Button
            android:id="@+id/quit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:background="@drawable/custom_button_background"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Quit"
            android:textColor="#FFFFFF"
            android:textSize="16sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/Notebut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/portLayout"
        android:layout_marginTop="66dp">

        <Button
            android:id="@+id/btnOpenNoteActivity"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="9dp"
            android:background="@drawable/note"
            android:drawablePadding="8dp"
            android:onClick="openNoteActivity" />
    </RelativeLayout>

</RelativeLayout>